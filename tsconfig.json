{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": false,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layout/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": [
    "src",
    "src/*",
    "src/**/*"
  ]
}